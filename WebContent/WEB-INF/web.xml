<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>AnalysisChoice</servlet-name>
    <servlet-class>servlets.AnalysisChoice</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChooseParameters</servlet-name>
    <servlet-class>servlets.ChooseParameters</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RunAnalysis</servlet-name>
    <servlet-class>servlets.RunAnalysis</servlet-class>
    <multipart-config>
      <location>/tmp</location>
      <max-file-size>52428800</max-file-size>
      <max-request-size>209715200</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
  
  <servlet>
	<servlet-name>Download</servlet-name>
	<servlet-class>servlets.Download</servlet-class>
  </servlet>
  
  
  <servlet>
    <servlet-name>StartupServlet</servlet-name>
    <servlet-class>startup.StartupServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AnalysisChoice</servlet-name>
    <url-pattern>/methods</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChooseParameters</servlet-name>
    <url-pattern>/parameters</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RunAnalysis</servlet-name>
    <url-pattern>/running</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Download</servlet-name>
	<url-pattern>/files</url-pattern>
  </servlet-mapping>
</web-app>